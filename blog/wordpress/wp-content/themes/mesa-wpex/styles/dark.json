{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Dark",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#1F1F1B",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#f8f9fa",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#5764F3",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#7781F5",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#a8c7fa",
					"name": "Tertiary",
					"slug": "tertiary"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--contrast)"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"css": "& .wp-block-navigation__submenu-container{background:var(--wp--preset--color--base)!important;border-color:rgba(255,255,255,.15)!important;}"
			},
			"core/post-featured-image": {
				"css": "& img{opacity:.9}"
			},
			"core/code": {
				"color": {
					"background": "#28292a",
					"text": "var(--wp--preset--color--contrast)"
				}
			},
			"core/post-terms": {
				"elements": {
					"link": {
						"color": {
							"background": "var(--wp--preset--color--primary)",
							"text": "var(--wp--preset--color--contrast)"
						},
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--primary)",
								"text": "var(--wp--preset--color--contrast)"
							}
						}
					}
				}
			}
		}
	}
}
